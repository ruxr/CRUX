# Description:	Open source client for Windows NT Terminal Server
# URL:		http://www.rdesktop.org/
# Maintainer:	Roman Oreshnikov, r dot oreshnikov at gmail dot com
# Depends on:	gnutls libtasn1 nettle xorg-libx11 xorg-libxcursor

name=rdesktop
version=1.9.0
release=1
source=(https://github.com/$name/$name/archive/v$version/$name-v$version.tar.gz)

build(){
	cd $name-$version

	autoreconf -i
	./configure --prefix=/usr --disable-credssp --disable-smartcard

	make
	make prefix=$PKG/usr install

	mkdir -p $PKG/tmp
	mv $PKG/usr/share/rdesktop/keymaps/{common,en-us,modifiers,ru} $PKG/tmp
	rm $PKG/usr/share/rdesktop/keymaps/*
	mv $PKG/tmp/* $PKG/usr/share/rdesktop/keymaps
	rmdir $PKG/tmp
}
